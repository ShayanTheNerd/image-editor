{
	"semi": true,
	"tabWidth": 3,
	"useTabs": true,
	"printWidth": 120,
	"singleQuote": true,
	"insertPragma": false,
	"trailingComma": "all",
	"arrowParens": "avoid",
	"requirePragma": false,
	"bracketSpacing": true,
	"proseWrap": "preserve",
	"bracketSameLine": true,
	"quoteProps": "as-needed",
	"htmlWhitespaceSensitivity": "css",
	"embeddedLanguageFormatting": "auto"
}
