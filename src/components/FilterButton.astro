---
interface Props {
	name: string;
	index: number;
}

const { name, index } = Astro.props as Props;
const fontSize: string = `var(--font-${name === 'hue-rotation' ? 'base' : 'md'})`;
---

<button type="button" class:list={index === 0 && 'btn--filter--active'} class="btn">
	{name}
</button>

<style define:vars={{ fontSize }}>
	@import '@styles/tokens/media-queries.css';

	button {
		outline: none;
		min-width: var(--28);
		text-transform: capitalize;

		@media (--md) {
			grid-column: span 1 / span 1;
		}
		@media (--lg) {
			font-size: var(--fontSize);
		}
	}
</style>
