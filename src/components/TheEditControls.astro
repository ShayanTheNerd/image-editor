---
import TheSpins from '@components/TheSpins.astro';
import TheFilters from '@components/TheFilters.astro';
import TheFilterRange from '@components/TheFilterRange.astro';
import TheResetButton from '@components/TheResetButton.astro';
---

<fieldset disabled id="edit_options_container">
	<legend class="sr-only">Edit Options</legend>

	<TheFilters />

	<TheFilterRange />

	<TheSpins />

	<TheResetButton />
</fieldset>

<style>
	@import '@styles/tokens/media-queries.css';

	fieldset {
		order: 2;
		display: flex;
		flex-direction: column;
		gap: var(--5);
		padding: var(--3);
		min-width: 100%;
		border-radius: var(--1);
		border: 2px solid var(--color-gray-400);
		color: var(--color-gray-800);

		&[disabled] {
			opacity: 0.6;
			pointer-events: none;
		}

		@media (--md) {
			order: 1;
			padding: var(--2);
			max-width: var(--xs);
			grid-column: span 4 / span 4;
		}
		@media (--lg) {
			gap: var(--6);
			padding: var(--4);
		}
	}
</style>
